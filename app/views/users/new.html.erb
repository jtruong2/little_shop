
<div class="container">
  <h1 class="row col-sm-offset-2">Register</h1>
  <%= form_for @user, :html => {:class => "form-horizontal", :role => "form"} do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :street_address, class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :city, class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= f.text_field :city, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :state, class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= f.text_field :state, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :zipcode, class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= f.text_field :zipcode, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :phone_number, class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= f.text_field :phone, class: "form-control" %>
      </div>
    </div>
    <div class="col-sm-offset-2 col-sm-4">
      <%= f.submit "Register", class: "btn btn-danger" %>
    </div>
  <% end %>
<div>
